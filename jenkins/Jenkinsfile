pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'git clone'
                echo 'Start Ansible playbook..'
                echo 'Complete.'
                echo '------------------------'
                sh 'make'
            
            }

        }
        stage('Test') {
            steps {
                echo 'Start Integration Test..'
                echo 'Test Complete'
                echo '------------------------'
                echo 'Start Unit Test..'
                echo 'Test Complete'
                echo '------------------------'
                
            }

        }
        stage('Prod') {
            steps {
                echo 'Deploy to prod..'
                when {
                    expression {
                        currentBuild.result == null || currentBuild.result == 'SUCCESS'
                    }
                }
                steps {
                    sh 'make publish'
                }
                echo 'Complete'
                echo '------------------------'

            }
        }

    }
}
